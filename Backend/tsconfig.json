{
  "compilerOptions": {
    "target": "ES2020",    
    "module": "commonjs",             
    "esModuleInterop": true,         
    "moduleResolution": "node",
    "strict": true,
    "skipLibCheck": true,            
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  },
    "include": ["src/**/*"],
  "exclude": ["node_modules"]
}